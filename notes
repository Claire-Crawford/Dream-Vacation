		<script type="text/javascript">
			new fullpage('#myContainer', {
				sectionsColor: ['#D5C3C3', '#CDB7B7', '#BC9F9F', '#AB8787', '#A37B7B', '#9B6F6F'],
				slidesNavigation: true,
				afterLoad: function(origin, destination, direction) {
					var loadedSection = this;

					if (destination.index == 1) {
						$("#section2 h1").removeClass("d-none").addClass("animate__animated animate__fadeInLeftBig");
					}
					
					if (destination.index == 2) {
						$("#section3 h1").addClass("animate__animated animate__fadeInLeftBig");
					}

					if (destination.index == 3) {
						$("#section4 h1").addClass("animate__animated animate__fadeInLeftBig");
					}
					

					if (destination.index == 1) {
						$("#section2 .animate__animated").addClass(
							"animate__fadeInLeftBig");
					}

					if (destination.index == 2) {
						$("#section3 .animate__animated").addClass(
							"animate__fadeInLeftBig");
					}

					if (destination.index == 3) {
						$("#section4 .animate__animated").addClass(
							"animate__fadeInLeftBig");
					}

					if (destination.index == 4) {
						$("#section5 .animate__animated").addClass(
							"animate__fadeInLeftBig");
					}

					if (destination.index == 5) {
						$("#section6 .animate__animated").addClass(
							"animate__fadeInLeftBig");
					}
				}
			});
		</script>
